<body>
    <div class="game-container">
        <!-- カードの例 -->
        <div class="card" onclick="flipCard(this)">1</div>
        <div class="card" onclick="flipCard(this)">2</div>
        <div class="card" onclick="flipCard(this)">3</div>
        <div class="card" onclick="flipCard(this)">4</div>
    </div>

    <script>
        function flipCard(card) {
            // カードの拡大・縮小エフェクト
            if (card.classList.contains('flip')) {
                card.classList.remove('flip');
            } else {
                card.classList.add('flip');
            }
        }
    </script>
</body>
