    <title>Memory Game Test</title>
    <style>
        /* 簡単なスタイル設定 */
        body {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            background-color: #f0f0f0;
        }
        .game-container {
            display: flex;
            flex-wrap: wrap;
            width: 300px;
            gap: 10px;
        }
        .card {
            width: 80px;
            height: 120px;
            background-color: #4CAF50;
            border-radius: 10px;
            display: flex;
            justify-content: center;
            align-items: center;
            color: white;
            font-size: 24px;
            cursor: pointer;
            transition: transform 0.3s;
        }
        .card.flip {
            transform: scale(1.2);
        }
    </style>
